<div class="logoutform">

    <form class="" action="/session" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="hidden" name="_method" value="delete">
      <button>Logout</button>
    </form>

</div>

<h1>My Dev Journey Timeline</h1>
<div class="para">
  <p>This is a timeline that outlines your journey as an asipiring web developer. Add an event to your web journey so that it tells a story.</p>
</div>


<section class="timeline js-timeline">
  <div class="cd-timeline__container">

    <% @sorted.each do |event|%>
        <div class="cd-timeline__block js-cd-block">
          <div class="cd-timeline__img cd-timeline__img--picture js-cd-img">
            <%= image_tag "star_icon.png" %>
          </div>

          <div class="cd-timeline__content js-cd-content">
            <h3><%= event.date%></h3><br>
              <h3><%= event.event_name%></h3>
              <p><%= event.description%></p>
              <img src="<%= event.icon_url%>" alt="" height="50px">
                <a href="/events/<%= event.id%>/edit">Edit...</a><br>
            <form action="/events/<%= event.id %>" method="post">
                <input type="hidden" name="_method" value="delete">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                <button>Delete</button>
            </form>
        </div>
      </div>

    <%end%>
  </div>

</section>

